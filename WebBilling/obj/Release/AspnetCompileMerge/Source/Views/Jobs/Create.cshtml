@using Microsoft.AspNet.Identity
@model WebBilling.Models.Job

@{
    ViewBag.Title = "Create";
}

<h2>Create a Job</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal text18Size" style="min-width: 400px;">
        
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group" style="min-width: 400px;">
            @Html.Label("Technician", new { @class = "control-label col-md-2" })
            <div class="col-md-10-custom2" style="margin-left: 50px;">
                @Html.Label(User.Identity.GetUserName())
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CustomerID, "Customer", new { @class = "control-label col-md-2" })
            <div class="col-md-10-custom2">
                @Html.DropDownList("CustomerID", String.Empty)
                @Html.ValidationMessageFor(model => model.CustomerID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info sizedButton" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
